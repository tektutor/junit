<project>
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.tektuor</groupId>
	<artifactId>tektutor-testsuite-demo</artifactId>
	<version>1.0.0</version>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
				    <includes>
					<include>**/TestSuite.class</include>
				    </includes>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
